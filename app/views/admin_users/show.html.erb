<% content_for :slide_full do %>
  <%= stylesheet_link_tag 'admin_users/show' %>
<% end %>


<%= render "shared/header" %>
<%# admin_profileのadmin_imageを貼り付ける %>
<% unless @admin_profile&.admin_image == nil %>
  <%= image_tag  @admin_profile&.admin_image, class: 'show_admin_img' %>
<% end %>
<%# admin_profileのadmin_imageを貼り付ける %>
<div class="show-wrapper">
  <h2 class='shop-title'>
    <%= @store_name %>
  </h2>
  <div class="user-contents">
    <ul class='show-events'>
      <%  @events.each do |event| %>
      <li class="show-event">
        <%= link_to event_path(event.id) do %>
        <%= image_tag event.event_image, class:'show-event-img' %>
        <div class='show-event-date'>
          <%= event.event_date %>
        </div>
        <p class="show-event-name">
          <%= event.name %>
        </p>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="profile-contents">
    <p class="shop-name"><%= @store_name %></p>
    <p class="postal-code">
      〒
      <%= @admin_profile&.postal_code %>
    </p>
    <p class="prefecture-text">
      <%= @admin_profile&.prefecture&.name %><%= @admin_profile&.municipality %>
    </p>
    <p class="address-text">
      <%= @admin_profile&.address %><%= @admin_profile&.building_name %>
    </p>
    <%= link_to "Google mapで見る", "#", class:"map-link" %>
    <p class="tel">
      TEL:
      <%= link_to @admin_profile&.phone_number, "#", class:"phone-number" %>
    </p>
    <p class="admin-profile">
      <%= @admin_profile&.profile %>
    </p>
  </div>
</div>

<%= render "shared/footer" %>