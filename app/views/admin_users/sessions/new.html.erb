<%= render "shared/second_header" %>

<%= form_with model: @admin_user, url: admin_user_session_path, local: true do |f| %>
<h1 class= "title">
  ログイン
</h1>
    <h2 class= "sub-title">
      会員情報入力
    </h2>
<div class="signin-wrapper">
  <div class="container">

    <div class="login-flash-message">
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <div class="form-box">
        <label for="form-text">
          メールアドレス
        </label>
        <div class="form-right">
           <%= f.email_field :email, class:"form-input-box", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true  %>
        </div>
    </div>
    <div class="form-box">
        <label for="form-text">
          パスワード
        </label>
        <div class="form-right">
          <%= f.password_field :password, class:"form-input-box", id:"password", placeholder:"6文字以上の半角英数字" %>
        </div>
    </div>
    <div class='login-btn'>
      <%= f.submit "ログイン" ,class:"login-submit-btn" %>
    </div>
  </div>
</div>
<% end %>

<%= render "shared/footer" %>
