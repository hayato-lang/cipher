<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class = 'top-page-wrapper'>
    <div class='search-bar-contents'>
     <%= link_to  "Cipher", "#", class:"cipher-icon" %>
    </div>
    <div class='nav'>
      <ul class='lists-right'>
        <% if admin_user_signed_in? %>
          <li><%= link_to current_admin_user.store_name, root_path, class: "store-name" %></li> 
          <li><%= link_to 'Log out', destroy_admin_user_session_path, method: :delete, class: "logout" %></li> 
        <% else %> 
          <li><%= link_to 'Log in',  new_admin_user_session_path, class: "login" %></li>
          <li><%= link_to 'Sign up', new_admin_user_registration_path, class: "sign-up" %></li>
        <% end %> 
     </ul>
    </div>
  </div>
</header>



