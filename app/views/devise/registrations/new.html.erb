<%= render "shared/second_header" %>

<div class="signup-wrapper">
  <div class="signup-main">
    <p class="title">
      店舗登録
    </p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),class: 'registration-main') do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
    <%= f.fields_for :admin do |admin| %>
    <div class="conteiner">
      <div class="form-box">
        <label for="form-text">
          店名
          <span class="red">*</span>
        </label>
        <div class="form-right">
           <%= admin.text_area :store_name, class:"form-input-box", id:"store_name", placeholder:"Over Night", autofocus: true %>
        </div>
      </div>
      <div class="form-box">
        <div class="form-text">
            イメージ
            <span class="red">*</span>
        </div>
        <div class="click-upload">
          <p>
            クリックしてファイルをアップロード
          </p>
          <%= admin.file_field :admin_image, id:"profile-image" %>
        </div>
      </div>
      <div class="form-box">
        <label for="form-text">
          メールアドレス
          <span class="red">*</span>
        </label>
        <div class="form-right">
           <%= f.email_field :email, class:"form-input-box", id:"email", placeholder:"PC・携帯どちらでも可" %>
        </div>
      </div>
      <div class="form-box">
        <label for="form-text">
          パスワード
          <span class="red">*</span>
        </label>
        <div class="form-right">
          <%= f.password_field :password, class:"form-input-box", id:"password", placeholder:"6文字以上の半角英数字" %>
          <p class="info-text">※英字と数字の両方を含めて入力してください</p>
        </div>
      </div>
      <div class="form-box">
        <label for="form-text">
          パスワード（確認用）
          <span class="red">*</span>
        </label>
        <div class="form-right">
          <%= f.password_field :password_confirmation, class:"form-input-box", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
          <p class="info-text">※英字と数字の両方を含めて入力してください</p>
        </div>
      </div>
      <div class="form-box">
        <label for="form-text">
          郵便番号
          <span class="red">*</span>
        </label>
        <div class="form-right">
           <%= admin.text_area :postal_code, class:"form-input-box", id:"postal_code", placeholder:"例)123-4567" %>
        </div>
      </div>
      <div class="form-box">
        <label for="form-text">
          都道府県
          <span class="red">*</span>
        </label>
        <div class="form-right">
           <%= admin.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"profile-prefecture"}) %>
        </div>
      </div> 
      <div class="form-box">
        <label for="form-text">
          市区町村
          <span class="red">*</span>
        </label>
        <div class="form-right">
           <%= admin.text_area :municipality, class:"form-input-box", id:"municipality", placeholder:"例）横浜市緑区" %>
        </div>
      </div>
      <div class="form-box">
        <label for="form-text">
          番地
          <span class="red">*</span>
        </label>
        <div class="form-right">
           <%= admin.text_area :postal_code, class:"form-input-box", id:"address", placeholder:"例）青山1-1" %>
        </div>       
      </div>    
      <div class="form-box">
        <label for="form-text">
          建物名
        </label>
        <div class="form-right">
           <%= admin.text_area :building_name, class:"form-input-box", id:"building-name", placeholder:"例）柳ビル 103" %>
        </div>
      </div>
      <div class="form-box">
        <label for="form-text">
          電話番号
          <span class="red">*</span>
        </label>
        <div class="form-right">
           <%= admin.text_area :phone_number, class:"form-input-box", id:"phone-number", placeholder: "例）09012345678" %>
        </div>
      </div> 
      <div class="form-box">
        <label for="form-text">
          プロフィール
          <span class="red">*</span>
        </label>
        <div class="form-right">
           <%= admin.text_area :profile, class:"form-text-box", id:"profile" %>
        </div>
      </div>    
      <div class="form-box">
         <h2 class='form-bottom-text'>
          「会員登録」のボタンを押すことにより、
          <span>利用規約</span>
          <br>に同意したものとみなします
        </h2>
      </div>     
      <div class='register-btn'>
        <%= f.submit "会員登録" ,class:"register-submit-btn" %>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>