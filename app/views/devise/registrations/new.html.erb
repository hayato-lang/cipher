<%= render "shared/second_header" %>

<div class="signup-wrapper">
  <div class="signup-main">
    <p class="title">
      店舗登録
    </p>
    <%= form_with model: @admin_user, url: new_admin_user_registration_path, class: 'registration-main', local: true do |f| %>
    <div class="conteiner">
      <div class="form-box">
        <label for="form-text">
          店名
          <span class="red">*</span>
        </label>
        <div class="form-right">
           <%= f.text_area :hoge, class:"form-input-box", id:"store_name", placeholder:"Over Night" %>
        </div>
      </div>
      <div class="form-box">
        <label for="form-text">
          メールアドレス
          <span class="red">*</span>
        </label>
        <div class="form-right">
           <%= f.email_field :hoge, class:"form-input-box", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
        </div>
      </div>
      <div class="form-box">
        <label for="form-text">
          パスワード
          <span class="red">*</span>
        </label>
        <div class="form-right">
          <%= f.password_field :hoge, class:"form-input-box", id:"password", placeholder:"6文字以上の半角英数字" %>
          <p class="info-text">※英字と数字の両方を含めて入力してください</p>
        </div>
      </div>
      <div class="form-box">
        <label for="form-text">
          パスワード（確認用）
          <span class="red">*</span>
        </label>
        <div class="form-right">
          <%= f.password_field :hoge, class:"form-input-box", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
          <p class="info-text">※英字と数字の両方を含めて入力してください</p>
        </div>
      </div>
      <div class="form-box">
         <h2 class='form-bottom-text'>
          「会員登録」のボタンを押すことにより、
          <span>利用規約</span>
          <br>に同意したものとみなします
        </h2>
      </div>
      <div class='register-btn'>
        <%= f.submit "会員登録" ,class:"register-submit-btn" %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>